init_config:

instances:
    -   url: <%= @url %>
        catalog_checks: <%= @catalog_checks ? 'yes' : 'no' %>
        new_leader_checks: <%= @new_leader_checks ? 'yes' : 'no' %>
<% if @service_whitelist and ! @service_whitelist.empty? -%>
        service_whitelist:
  <%- Array(@service_whitelist).each do |svc| -%>
    <%- if svc != '' -%>
            - <%= svc %>
    <%- end -%>
  <%- end -%>
<% end -%>
